#include <iostream>
using namespace std;
int main()
{
    int num;
    char repeat;
	do
	{
	    cout << "Enter any number" << endl;
        cin >> num;
	    if (num %2==0){
	        cout << "Even number" << endl;
	    }
	    else{
	        cout << "Odd number" << endl;
	    }	    
	cout << "Repeat? Y/N?" << endl;    
	cin >> repeat;
	}while (repeat == 'y' || repeat == 'Y');
    return 0;
}
